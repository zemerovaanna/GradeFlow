<Window x:Class="GradeFlowECTS.View.Windows.ExistingMailsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GradeFlowECTS.View.Windows"
        mc:Ignorable="d"
        Title="GradeFlow ЕКТС" Height="450" Width="800" WindowState="Maximized" Background="{StaticResource AccentBrush}">

    <Grid Background="{StaticResource WindowBackgroundBrush}" Margin="2">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Внимание, эти почты уже зарегистрированы:" FontSize="25" Margin="5"/>

        <ListBox Grid.Row="1" ItemsSource="{Binding}" FontSize="22"/>
    </Grid>

</Window>