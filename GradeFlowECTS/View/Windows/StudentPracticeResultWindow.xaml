<Window x:Class="GradeFlowECTS.View.Windows.StudentPracticeResultWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GradeFlowECTS.View.Windows"
        mc:Ignorable="d"
        Title="Результат студента" Height="450" Width="800"
        WindowState="Maximized"
        WindowStyle="None"
        ResizeMode="NoResize"
        ShowInTaskbar="False">
    <Grid VerticalAlignment="Center" HorizontalAlignment="Center">
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <TextBlock x:Name="ResultText" Text="Результат" FontSize="25" TextWrapping="Wrap" Grid.Row="0"/>
        <Button BorderBrush="{StaticResource AccentBrush}" Grid.Row="1" Height="45" Width="600" Margin="0,25" Click="CloseButton_Click">
            <TextBlock Text="Закрыть" FontSize="25" Foreground="{StaticResource AccentBrush}"/>
        </Button>
    </Grid>
</Window>