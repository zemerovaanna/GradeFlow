<Window x:Class="GradeFlowECTS.View.Windows.AddVariantWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GradeFlowECTS.View.Windows"
        mc:Ignorable="d"
        Title="Добавление варианта для квалификационного экзамена" Height="700" Width="800" WindowState="Maximized">
    <ScrollViewer VerticalScrollBarVisibility="Visible">
            <StackPanel>
            <TextBlock x:Name="One" Margin="10,10,0,0"/>
            <TextBox x:Name="OneText" Grid.Row="1" AcceptsReturn="True" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto" Height="200" FontSize="20" BorderBrush="Gray" BorderThickness="1" Margin="10,0,10,0" />
            <TextBlock x:Name="Two" Margin="10,20,0,0"/>
            <TextBox x:Name="TwoText" Grid.Row="1" AcceptsReturn="True" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto" Height="200" FontSize="20" BorderBrush="Gray" BorderThickness="1" Margin="10,0,10,0" />
            <Button Click="Button_Click1" Margin="10" MinHeight="45" BorderBrush="{StaticResource AccentBrush}">
                <TextBlock Foreground="{StaticResource AccentBrush}" Text="Сохранить" FontSize="25"/>
            </Button>
            <Button Click="Button_Click" Margin="10" MinHeight="45" BorderBrush="{StaticResource AccentBrush}">
            <TextBlock Foreground="{StaticResource AccentBrush}" Text="Отмена" FontSize="25"/>
        </Button>
    </StackPanel>
    </ScrollViewer>

</Window>