<Window x:Class="GradeFlowECTS.View.Windows.MDK01ResultsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GradeFlowECTS.View.Windows"
        mc:Ignorable="d"
        Title="Результаты" Height="450" Width="800" WindowState="Maximized" Background="{StaticResource WindowBackgroundBrush}">

    <DockPanel>
        <Grid DockPanel.Dock="Top">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Button Click="BackButton_Click" Background="Transparent" BorderBrush="{StaticResource AccentBrush}" Margin="10" MinHeight="45">
                <TextBlock FontSize="20" Foreground="{StaticResource AccentBrush}" Text="Назад" />
            </Button>
            <Border BorderBrush="Purple" BorderThickness="1" CornerRadius="5" Grid.Column="1" Margin="10" Padding="5">
                <TextBlock FontSize="30" Foreground="Purple" Text="Результаты" TextAlignment="Center" />
            </Border>
        </Grid>
        <TreeView ItemsSource="{Binding Groups}">
            <TreeView.ItemTemplate>
                <HierarchicalDataTemplate ItemsSource="{Binding StudentResults}">
                    <TextBlock Text="{Binding GroupName}" FontWeight="Bold"/>
                    <HierarchicalDataTemplate.ItemTemplate>
                        <DataTemplate>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <!-- Контент слева -->
                                    <ColumnDefinition Width="Auto" />
                                    <!-- Кнопки справа -->
                                </Grid.ColumnDefinitions>

                                <!-- Левая часть -->
                                <StackPanel Grid.Column="1" Orientation="Vertical" Margin="5">
                                    <TextBlock>
                                        <Run Text="{Binding DateEnded}"/> 
                                        <Run Text="{Binding TimeEnded}"/>
                                    </TextBlock>
                                    <TextBlock Text="{Binding StudentName}" />
                                    <TextBlock Text="{Binding TotalScore, StringFormat='Баллы: {0}'}" />
                                </StackPanel>

                                <!-- Правая часть -->
                                <StackPanel Grid.Column="0" HorizontalAlignment="Right">
                                    <Button Command="{Binding DataContext.ViewResultCommand, RelativeSource={RelativeSource AncestorType=Window}}" CommandParameter="{Binding}" BorderBrush="Purple" Margin="5">
                                        <TextBlock Foreground="Purple" Text="Просмотр" />
                                    </Button>
                                    <Button Command="{Binding DataContext.RemoveResultCommand, RelativeSource={RelativeSource AncestorType=Window}}" CommandParameter="{Binding}" BorderBrush="DarkRed" Margin="5">
                                        <TextBlock Foreground="DarkRed" Text="Удалить" />
                                    </Button>
                                </StackPanel>
                            </Grid>
                        </DataTemplate>
                    </HierarchicalDataTemplate.ItemTemplate>
                </HierarchicalDataTemplate>
            </TreeView.ItemTemplate>
        </TreeView>
    </DockPanel>
</Window>