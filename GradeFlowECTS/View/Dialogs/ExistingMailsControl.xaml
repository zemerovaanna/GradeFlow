<UserControl x:Class="GradeFlowECTS.View.Dialogs.ExistingMailsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GradeFlowECTS.View.Dialogs"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" Background="{StaticResource WindowBackgroundBrush}">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Внимание, эти почты уже зарегистрированы:" FontSize="25" Margin="5"/>

        <ListBox Grid.Row="1" ItemsSource="{Binding ExistingMails}" FontSize="22"/>
    </Grid>

</UserControl>
